<resources>

    <declare-styleable name="ExpandableImageView">
        <attr name="collapsedHeight" format="dimension" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
    <attr name="siArrowPosition">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="siBorderType">
        <enum name="stroke" value="0" />
        <enum name="fill" value="1" />
    </attr>
    <attr name="siStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>
    <attr name="siStrokeJoin">
        <enum name="bevel" value="0" />
        <enum name="miter" value="1" />
        <enum name="round" value="2" />
    </attr>
    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siForeground" format="integer|reference" />
        <!-- Rounded Image View -->
        <attr name="siRadius" format="dimension" />
        <!--BubbleImageView-->
        <attr name="siArrowPosition"/>
        <attr name="siTriangleHeight" format="dimension"/>
        <!--PorterImageView-->
        <attr name="siShape" format="integer|reference" />
        <!--ShaderImageView-->
        <attr name="siBorderType"/>
        <attr name="siStrokeCap"/>
        <attr name="siStrokeJoin"/>
        <attr name="siStrokeMiter" format="dimension" />
    </declare-styleable>

    <dimen name="activity_horizontal_margin_2x">32dp</dimen>
    <dimen name="activity_horizontal_margin_half">8dp</dimen>
    <dimen name="activity_horizontal_margin_1of4">4dp</dimen>
    <dimen name="activity_vertical_margin_2x">32dp</dimen>
    <dimen name="activity_vertical_margin_half">8dp</dimen>
    <dimen name="activity_vertical_margin_1of4">4dp</dimen>
    <dimen name="activity_vertical_margin_1of8">2dp</dimen>
    <dimen name="margin_minimum">1dp</dimen>
    <dimen name="margin_minimum_x2">2dp</dimen>

    <dimen name="actionbar_height">48dp</dimen>
    <dimen name="actionbar_height_half">24dp</dimen>
    <dimen name="bar_height">18dp</dimen>
    <dimen name="post_menu_height">36dp</dimen>

    <dimen name="button_height">48dp</dimen>
    <dimen name="button_height_small">35dp</dimen>
    <dimen name="button_un_block_height">24dp</dimen>
    <dimen name="button_icon_height">30dp</dimen>
    <dimen name="button_user_profile_height">30dp</dimen>
    <dimen name="button_width_min">100dp</dimen>
    <dimen name="checks_width">100dp</dimen>

    <dimen name="menu_pic">24dp</dimen>
    <dimen name="menu_pic_large">36dp</dimen>
    <dimen name="menu_pic_largest">48dp</dimen>
    <dimen name="profile_pic_small">24dp</dimen>
    <dimen name="profile_pic">36dp</dimen>

    <dimen name="img_under_cover">64dp</dimen>


    <dimen name="corner_size_dialog">20dp</dimen>
    <dimen name="corner_size">2dp</dimen>

    <dimen name="drawer_width">200dp</dimen>

    <dimen name="dialog_body_height">72dp</dimen>

    <declare-styleable name="ImageViewCircle">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- SPLASH SCREEN -->
    <dimen name="splash_button_width">200dp</dimen>
</resources>
