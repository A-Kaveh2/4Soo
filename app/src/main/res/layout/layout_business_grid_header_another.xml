<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ir.rasen.charsoo.view.widget_customized.imageviews.ExpandableImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_gradiant_up"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_back"
                android:layout_width="@dimen/action_bar_custome_height"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_white_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_gradiant_down"
                android:gravity="right|center_vertical"
                android:visibility="gone">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:layout_alignParentBottom="true"
                android:background="@color/White"
                android:orientation="horizontal" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ir.rasen.charsoo.view.widget_customized.buttons.ButtonFont
                android:id="@+id/btn_follow_satus"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height_large"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/OrangeRed"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/login" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_follow_satus"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_header"
                    android:layout_gravity="end"/>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_business_identifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/businesses"
                    android:textColor="@color/DarkOrange"
                    android:textSize="@dimen/font_size_header"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ir.rasen.charsoo.view.widget_customized.buttons.FloatButton
                        android:id="@+id/imageView_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/material_blue"
                        materialdesign:animate="false"
                        materialdesign:iconDrawable="@drawable/ic_friends" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_followers_number22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/font_size_header" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ir.rasen.charsoo.view.widget_customized.buttons.FloatButton
                    android:id="@+id/imageView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/material_blue"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_review" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/reviews"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ir.rasen.charsoo.view.widget_customized.buttons.FloatButton
                    android:id="@+id/imageView_contact_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@color/material_blue"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_contact" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/info"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- SWITCHES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/btn_switch_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/material_blue_light">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_grid" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_switch_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/material_gray">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
