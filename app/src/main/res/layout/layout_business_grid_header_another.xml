<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@drawable/shape_gradiant_up">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_gradiant_down"
                android:gravity="right|center_vertical"
                android:visibility="gone"
                android:layout_alignParentEnd="true">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:background="@color/White"
                android:layout_alignParentBottom="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/header_switch_hight"
            android:layout_height="@dimen/header_switch_hight"

            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true">

            <ir.rasen.charsoo.ui.ImageViewCircle
                android:layout_width="@dimen/header_switch_hight"
                android:layout_height="@dimen/header_switch_hight"
                android:id="@+id/imageView_cirecle"
                android:src="@color/DarkOrange" />

            <ImageView
                android:id="@+id/imageView_switch"
                android:layout_width="@dimen/header_switch_inner_item_hight"
                android:layout_height="@dimen/header_switch_inner_item_hight"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">

        <ir.rasen.charsoo.ui.ButtonFont
            android:id="@+id/btn_follow_satus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/login"
            android:background="@drawable/selector_button_shape_orange"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_larger" />

        <ir.rasen.charsoo.ui.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView_business_name"
            android:textColor="@color/Black" />

        <ir.rasen.charsoo.ui.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:text="@string/businesses"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/textView_business_identifier"
            android:textColor="@color/DarkOrange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:weightSum="100">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/selector_button_business_follower" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />
                </LinearLayout>

                <ir.rasen.charsoo.ui.TextViewFont
                    android:id="@+id/textView_followers_number22"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="12345"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:background="@drawable/shape_button_green_followers" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_button_business_review" />

                <ir.rasen.charsoo.ui.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/reviews"
                    android:gravity="center"
                    android:textColor="@color/Gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_conatct_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/selector_button_business_contact_info" />

                <ir.rasen.charsoo.ui.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/info"
                    android:gravity="center"
                    android:textColor="@color/Gray" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
