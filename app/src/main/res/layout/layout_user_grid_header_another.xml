<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ir.rasen.charsoo.view.widget_customized.imageviews.ExpandableImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_gradiant_up"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_search"
                android:layout_width="@dimen/action_bar_items_length"
                android:layout_height="@dimen/action_bar_items_length"
                android:background="@drawable/selector_action_bar_search"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView_back"
                android:layout_width="@dimen/action_bar_custome_height"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_back_white_24dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_gradiant_down"
                android:gravity="right|center_vertical"
                android:visibility="invisible">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/friends"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/reviews"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_businesses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/businesses"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:layout_alignParentBottom="true"
                android:background="@color/White"
                android:orientation="horizontal" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/header_switch_hight"
            android:layout_height="@dimen/header_switch_hight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp">

            <ir.rasen.charsoo.view.widget_customized.imageviews.ImageViewCircle
                android:id="@+id/imageView_cirecle"
                android:layout_width="@dimen/header_switch_hight"
                android:layout_height="@dimen/header_switch_hight"
                android:src="@color/DarkOrange" />

            <ImageView
                android:id="@+id/imageView_switch"
                android:layout_width="@dimen/header_switch_inner_item_hight"
                android:layout_height="@dimen/header_switch_inner_item_hight"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <ir.rasen.charsoo.view.widget_customized.buttons.ButtonFont
            android:id="@+id/btn_friend_satus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_button_shape_orange"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/login" />


        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:id="@+id/textView_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black"
            android:textSize="@dimen/font_size_header" />

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:id="@+id/textView_user_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/DarkOrange"
            android:textSize="@dimen/font_size_header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_follower" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_friends_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header"
                        android:visibility="gone" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/friends"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_review" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_reviews_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header"
                        android:visibility="gone" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/reviews"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_businesses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_contact_info" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_businesses_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header"
                        android:visibility="gone" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/businesses"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
