<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain"
    android:gravity="center">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/rl_edit_text">

                <ir.rasen.charsoo.ui.EditTextFont
                    android:id="@+id/editText_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textColorHint="@color/Black"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/Black"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_email_blue_24dp" />

                <ir.rasen.charsoo.ui.EditTextFont
                    android:id="@+id/editText_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_2"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    android:visibility="gone"
                    android:textColorHint="@color/Black"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/Black"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/ic_lock_blue_24dp" />

                <ir.rasen.charsoo.ui.EditTextFont
                    android:id="@+id/editText_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText_1"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="true"
                    android:textColorHint="@color/Black"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/Black"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/ic_lock_blue_24dp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
