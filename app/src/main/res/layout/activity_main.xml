<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityMain">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/DeepSkyBlue">

        <RelativeLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ir.rasen.charsoo.view.widgets.buttons.NoShadowFloatButton
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/actionbar_height_4of5"
                    android:layout_height="@dimen/actionbar_height_4of5"
                    android:background="@android:color/white"
                    android:layout_weight="1"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_home_blue_36dp"
                    materialdesign:rippleColor="@android:color/white" />

                <ir.rasen.charsoo.view.widgets.buttons.NoShadowFloatButton
                    android:id="@+id/btn_search"
                    android:layout_width="@dimen/actionbar_height_4of5"
                    android:layout_height="@dimen/actionbar_height_4of5"
                    android:background="@color/DeepSkyBlue"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_search_white_36dp"
                    materialdesign:rippleColor="@android:color/white"/>

                <ir.rasen.charsoo.view.widgets.buttons.NoShadowFloatButton
                    android:id="@+id/btn_businesses2"
                    android:layout_width="@dimen/actionbar_height_4of5"
                    android:layout_height="@dimen/actionbar_height_4of5"
                    android:background="@color/DeepSkyBlue"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_store_mall_directory_white_36dp"
                    materialdesign:rippleColor="@android:color/white"/>

                <ir.rasen.charsoo.view.widgets.buttons.NoShadowFloatButton
                    android:id="@+id/btn_user"
                    android:layout_width="@dimen/actionbar_height_4of5"
                    android:layout_height="@dimen/actionbar_height_4of5"
                    android:background="@color/DeepSkyBlue"
                    materialdesign:animate="false"
                    materialdesign:iconDrawable="@drawable/ic_person_white_36dp"
                    materialdesign:rippleColor="@android:color/white"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:onClick="switchPopupWindow"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_more_vert_white_24dp" />

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/imageView_more"
                android:layout_toStartOf="@+id/imageView_more"
                android:src="@drawable/logo_4soo" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/frag_home"
                class="ir.rasen.charsoo.view.fragment.FragmentHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_gridview_swip_header_footer" />

            <fragment
                android:id="@+id/frag_search"
                class="ir.rasen.charsoo.view.fragment.FragmentSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_search" />

            <fragment
                android:id="@+id/frag_user"
                class="ir.rasen.charsoo.view.fragment.FragmentUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_user" />

            <fragment
                android:id="@+id/frag_user_businesses"
                class="ir.rasen.charsoo.view.fragment.FragmentUserBusinesses"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_user" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
