<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin_1of4"
        android:background="@drawable/bg_item_business"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ir.rasen.charsoo.view.widgets.imageviews.RoundedImageView
            android:id="@id/img_userbusinesses_pic"
            android:layout_width="@dimen/menu_pic_largest"
            android:layout_height="@dimen/menu_pic_largest"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_app" />

        <ir.rasen.charsoo.view.widgets.TextViewFont
            android:id="@id/txt_userbusinesses_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/img_userbusinesses_pic"
            android:text="@string/app_name"
            android:textColor="@color/Black" />

        <ir.rasen.charsoo.view.widgets.TextViewFont
            android:id="@id/txt_userbusinesses_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_userbusinesses_name"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:layout_toLeftOf="@id/img_userbusinesses_pic"
            android:text="توضیحات نمونه توضیح توضیحات اینجا نوشته خواهند شد توضیحات توضیحات توضیح اینجا اینجا توضیحات" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin_1of4" />
</LinearLayout>
