<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@drawable/shape_gradiant_up">

            <ImageView
                android:layout_width="@dimen/action_bar_items_length"
                android:layout_height="@dimen/action_bar_items_length"
                android:id="@+id/imageView_search"
                android:visibility="gone"
                android:background="@drawable/selector_action_bar_search" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_more_vert_white_24dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_back"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white_24dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/BlackTransparent"
                android:gravity="right|center_vertical"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/imageView_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_edit_white_24dp"/>
                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/requests"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/textView_friend_requests"
                    android:textColor="@color/White" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friends"
                    android:visibility="gone"
                    android:textSize="@dimen/font_size_header"
                    android:layout_marginRight="15dp"
                    android:id="@+id/textView_friends"
                    android:textColor="@color/White" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews"
                    android:visibility="gone"
                    android:id="@+id/textView_reviews"
                    android:textSize="@dimen/font_size_header"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/White" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone"
                    android:text="@string/businesses"
                    android:layout_marginRight="5dp"
                    android:id="@+id/textView_businesses"
                    android:textColor="@color/White" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:background="@color/White"
                android:layout_alignParentBottom="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/header_switch_hight"
            android:layout_height="@dimen/header_switch_hight"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true">

            <ir.rasen.charsoo.view.widget_customized.ImageViewCircle
                android:layout_width="@dimen/header_switch_hight"
                android:layout_height="@dimen/header_switch_hight"
                android:id="@+id/imageView_cirecle"
                android:src="@color/DarkOrange" />

            <ImageView
                android:id="@+id/imageView_switch"
                android:layout_width="@dimen/header_switch_inner_item_hight"
                android:layout_height="@dimen/header_switch_inner_item_hight"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right">

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_user_name"
            android:textColor="@color/Black" />

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView_user_about_me"
            android:textColor="@color/Black" />

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:layout_marginRight="10dp"
            android:visibility="gone"

            android:layout_marginTop="5dp"
            android:id="@+id/textView_user_identifier"
            android:textColor="@color/DarkOrange" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imageView_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_follower" />
                    <ImageView
                        android:id="@+id/imageView_has_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_orange_24dp"/>

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_friends_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_header"
                        android:text="12345"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/Black"
                        android:gravity="center"
                        android:background="@drawable/shape_button_green_followers" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/friends"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/Gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_review" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_reviews_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_header"
                        android:text="12345"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/Black"
                        android:gravity="center"
                        android:background="@drawable/shape_button_green_followers" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/reviews"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/Gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_businesses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_contact_info" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_businesses_number"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_header"
                        android:text="12345"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/Black"
                        android:gravity="center"
                        android:background="@drawable/shape_button_green_followers" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/businesses"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/Gray" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
