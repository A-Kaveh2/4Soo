<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ir.rasen.charsoo.view.widget_customized.imageviews.ExpandableImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_gradiant_up"
            android:orientation="horizontal">
            <!--
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView_more"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_more_vert_white_24dp" />
            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_back">

                <ImageView
                    android:id="@+id/imageView_back"
                    android:layout_width="@dimen/action_bar_custome_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_back_white_24dp" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_business_identifier_header"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imageView_back"
                    android:textColor="@color/White" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_gradiant_black"
                android:onClick="onClick"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/imageView_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_edit_white_24dp" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_friend_requests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/requests"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/friends"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/reviews"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone" />

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView_businesses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/businesses"
                    android:textColor="@color/White"
                    android:textSize="@dimen/font_size_header"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:layout_alignParentBottom="true"
                android:background="@color/White"
                android:orientation="horizontal" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/header_switch_hight"
            android:layout_height="@dimen/header_switch_hight"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp">

            <ir.rasen.charsoo.view.widget_customized.imageviews.ImageViewCircle
                android:id="@+id/imageView_cirecle"
                android:layout_width="@dimen/header_switch_hight"
                android:layout_height="@dimen/header_switch_hight"
                android:src="@color/DarkOrange" />

            <ImageView
                android:id="@+id/imageView_switch"
                android:layout_width="@dimen/header_switch_inner_item_hight"
                android:layout_height="@dimen/header_switch_inner_item_hight"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:id="@+id/textView_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/Black"
            android:textSize="@dimen/font_size_header" />

        <ir.rasen.charsoo.view.widget_customized.TextViewFont
            android:id="@+id/textView_business_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/DarkOrange"
            android:textSize="@dimen/font_size_header"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_follower" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_followers_number22"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_review" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_followers_number2235"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header"
                        android:visibility="gone" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/reviews"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_conatct_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_button_business_contact_info" />

                    <ir.rasen.charsoo.view.widget_customized.TextViewFont
                        android:id="@+id/textView_followers_number22353"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_green_followers"
                        android:gravity="center"
                        android:text="12345"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/font_size_header"
                        android:visibility="gone" />
                </RelativeLayout>

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/info"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/font_size_header" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
