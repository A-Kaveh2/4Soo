<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/gray_transparent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_drawer_businesses"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_inner_items_with_icons_height"
                android:background="@drawable/selector_popup_middle_item"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/new_business"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_adapter_item_title" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/post_adapter_icon"
                    android:layout_height="@dimen/post_adapter_icon"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_add_circle_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_drawer_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_inner_items_with_icons_height"
                android:background="@drawable/selector_popup_middle_item"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/settings"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_adapter_item_title" />

                <ImageView
                    android:layout_width="@dimen/post_adapter_icon"
                    android:layout_height="@dimen/post_adapter_icon"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_settings_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/Gray" />

            <LinearLayout
                android:id="@+id/ll_drawer_guide"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_inner_items_height"
                android:background="@drawable/selector_popup_middle_item"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/guide"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_adapter_item_title" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_drawer_contact_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_inner_items_height"
                android:background="@drawable/selector_popup_middle_item"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/contact_us"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_adapter_item_title" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_drawer_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header_inner_items_height"
                android:background="@drawable/selector_popup_middle_item"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ir.rasen.charsoo.view.widget_customized.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/exit"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/font_size_adapter_item_title" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
