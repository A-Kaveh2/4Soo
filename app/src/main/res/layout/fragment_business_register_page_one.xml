<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageView
                android:layout_width="@dimen/register_profile_picture_height"
                android:layout_height="@dimen/register_profile_picture_height"
                android:id="@+id/imageView_picture"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_take_business_picture" />

            <ir.rasen.charsoo.view.widget_customized.EditTextFont
                android:id="@+id/editText_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_name"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/Black"
                android:maxLength="@integer/restriction_identifier_length"
                android:singleLine="true"
                android:textAlignment="center" />

            <ir.rasen.charsoo.view.widget_customized.EditTextFont
                android:id="@+id/editText_identifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/identifier_business"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                android:maxLength="@integer/restriction_identifier_length"
                android:singleLine="true"
                android:textAlignment="center" />




        </LinearLayout>
    </ScrollView>


</LinearLayout>
