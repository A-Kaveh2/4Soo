<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- RIGHT DEFINER BAR -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue" />
        </shape>
    </item>

    <!-- MARGIN -->
    <item android:right="@dimen/margin_minimum_x2">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item>

    <!-- CONTENT -->
    <item android:top="@dimen/margin_minimum"
        android:left="@dimen/margin_minimum"
        android:right="@dimen/margin_minimum_x2"
        android:bottom="@dimen/margin_minimum">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>